# n8n Production Environment cho strangematic.com
# Windows Dell OptiPlex 3060 + Cloudflare Tunnel

# ===========================================
# DOMAIN CONFIGURATION - strangematic.com
# ===========================================
DOMAIN_NAME=strangematic.com
N8N_EDITOR_BASE_URL=https://app.strangematic.com
WEBHOOK_URL=https://api.strangematic.com
N8N_HOST=app.strangematic.com
N8N_PROTOCOL=https
N8N_PORT=5678

# ===========================================
# DATABASE CONFIGURATION - PostgreSQL 17
# ===========================================
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=localhost
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=strangematic_n8n
DB_POSTGRESDB_USER=strangematic_user
DB_POSTGRESDB_PASSWORD=strangematic_2024_secure!

# ===========================================
# SECURITY CONFIGURATION - Production
# ===========================================
N8N_SECURE_COOKIE=true
N8N_JWT_SECRET=strangematic_jwt_secret_2024_ultra_secure_key_for_authentication
N8N_ENCRYPTION_KEY=strangematic_encryption_key_2024_ultra_secure_for_data_protection

# ===========================================
# EXECUTION CONFIGURATION - Dell OptiPlex
# ===========================================
N8N_EXECUTIONS_TIMEOUT=3600
N8N_EXECUTIONS_TIMEOUT_MAX=7200
N8N_EXECUTIONS_DATA_SAVE_ON_ERROR=all
N8N_EXECUTIONS_DATA_SAVE_ON_SUCCESS=all
N8N_EXECUTIONS_DATA_MAX_AGE=168

# ===========================================
# PERFORMANCE OPTIMIZATION - 16GB RAM
# ===========================================
N8N_EXECUTIONS_PROCESS=main
N8N_CONCURRENCY=4
EXECUTIONS_DATA_PRUNE=true
EXECUTIONS_DATA_MAX_AGE=168

# ===========================================
# MONITORING & LOGGING
# ===========================================
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=file
N8N_LOG_FILE_LOCATION=C:/Github/n8n-tp/logs/
N8N_METRICS=true

# ===========================================
# WEBHOOK CONFIGURATION
# ===========================================
N8N_PATH=/
N8N_LISTEN_ADDRESS=0.0.0.0
N8N_BASIC_AUTH_ACTIVE=false

# ===========================================
# DEPLOYMENT INFO
# ===========================================
NODE_ENV=production
N8N_VERSION_NOTIFICATIONS_ENABLED=false
N8N_TEMPLATES_ENABLED=true

# ===========================================
# WINDOWS SPECIFIC CONFIGURATION
# ===========================================
N8N_BINARY_DATA_MODE=filesystem
N8N_DEFAULT_BINARY_DATA_MODE=filesystem
N8N_BINARY_DATA_TTL=24
