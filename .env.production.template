# STRANGEMATIC N8N PRODUCTION ENVIRONMENT
# Copy this file to .env.production and fill in actual values

# Core Domain Configuration
DOMAIN_NAME=strangematic.com
N8N_EDITOR_BASE_URL=https://app.strangematic.com
WEBHOOK_URL=https://api.strangematic.com
N8N_HOST=app.strangematic.com
N8N_PROTOCOL=https
N8N_PORT=5678

# Network Configuration
N8N_PROXY_HOPS=1
N8N_TRUST_PROXY=true

# Database Configuration
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=localhost
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=strangematic_n8n
DB_POSTGRESDB_USER=strangematic_user
DB_POSTGRESDB_PASSWORD=your_postgres_password_here

# YEScale API Configuration
YESCALE_BASE_URL=https://yescale.bogia.app
YESCALE_ACCESS_KEY="your_yescale_access_key_here"
YESCALE_API_KEY="your_yescale_api_key_here"
YESCALE_ENABLE_FALLBACK=true
YESCALE_QUOTA_THRESHOLD=1000000

# Bot Platform Configuration
TELEGRAM_BOT_TOKEN="your_telegram_bot_token_here"
TELEGRAM_USER_ID="your_telegram_user_id_here"
TELEGRAM_WEBHOOK_URL=https://api.strangematic.com/webhook/telegram
DISCORD_BOT_TOKEN="your_discord_bot_token_here"
DISCORD_CLIENT_ID="your_discord_client_id_here"
DISCORD_WEBHOOK_URL=https://api.strangematic.com/webhook/discord

# External API Keys (Optional - for direct integrations)
OPENAI_API_KEY=your_openai_key_here
CLAUDE_API_KEY=your_claude_key_here
GOOGLE_AI_KEY=your_google_key_here

# Cost Management
MAX_DAILY_COST_USD=50
MAX_WORKFLOW_COST_USD=5
COST_ALERT_WEBHOOK=https://api.strangematic.com/webhook/cost-alert

# Security Configuration
N8N_SECURE_COOKIE=true
N8N_JWT_SECRET=your_jwt_secret_here
N8N_ENCRYPTION_KEY=your_encryption_key_here

# Execution Configuration
N8N_EXECUTIONS_TIMEOUT=3600
N8N_EXECUTIONS_TIMEOUT_MAX=7200
N8N_EXECUTIONS_DATA_SAVE_ON_ERROR=all
N8N_EXECUTIONS_DATA_SAVE_ON_SUCCESS=all
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=file

# Interface Configuration
N8N_BASIC_AUTH_ACTIVE=false
N8N_DISABLE_UI=false
N8N_SKIP_WEBHOOK_DEREGISTRATION_SHUTDOWN=true
